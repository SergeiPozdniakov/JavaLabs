  <body>
    <h1>Случайные изображения</h1>

    <div id="image-container">
      <img
        src="https://dummyimage.com/200x150/3498db/ffffff&text=Изображение+1"
        alt="Случайное изображение"
      />
    </div>

    <div class="button-group">
      <button id="new-image-btn">Обновить изображения</button>
      <button id="add-image-btn">Добавить картинку</button>
      <button id="remove-image-btn" disabled>Удалить картинку</button>
    </div>

    <footer>Автор: Ваше имя</footer>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const imageContainer = document.getElementById("image-container");
        const newImageBtn = document.getElementById("new-image-btn");
        const addImageBtn = document.getElementById("add-image-btn");
        const removeImageBtn = document.getElementById("remove-image-btn");

        let imageCounter = 1;

        // Функция для генерации URL случайного изображения
        const getRandomImageUrl = () => {
          return `https://dummyimage.com/200x150/3498db/ffffff&text=Изображение+${++imageCounter}`;
        };

        // Обновить все изображения
        newImageBtn.addEventListener("click", () => {
          const images = imageContainer.querySelectorAll("img");
          images.forEach((img) => {
            img.src = getRandomImageUrl();
          });
        });

        // Добавить новое изображение
        addImageBtn.addEventListener("click", () => {
          const newImg = document.createElement("img");
          newImg.src = getRandomImageUrl();
          newImg.alt = "Случайное изображение";
          imageContainer.appendChild(newImg);

          // Активируем кнопку удаления
          removeImageBtn.disabled = false;
        });

        // Удалить последнее изображение
        removeImageBtn.addEventListener("click", () => {
          const images = imageContainer.querySelectorAll("img");
          if (images.length > 1) {
            imageContainer.removeChild(images[images.length - 1]);

            // Проверяем, осталось ли только одно изображение
            if (imageContainer.querySelectorAll("img").length === 1) {
              removeImageBtn.disabled = true;
            }
          }
        });

        // Инициализация состояния кнопки удаления
        if (imageContainer.querySelectorAll("img").length <= 1) {
          removeImageBtn.disabled = true;
        }
      });
    </script>
  </body>
